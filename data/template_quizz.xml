<quizz id="1">
    <!--Composition d'un quizz -->
    <!--Type : TEXTE / IMAGE (le type de la réponse) -->
    <type>TEXTE</type>
    <!--Zone : 1, 2, 3, 4 ou 5. Correspond à la zone de l'aéroport -->
    <zone>1</zone>
    <!--OP : Objectif Pédagogique du quizz -->
    <op>1</op>
    <!--Difficulté : niveau de difficulté du quizz -->
    <difficulte>1</difficulte>
    <scenario>
        <!--Scénario : contexte du quizz, dialogue ... -->
        Il était une fois chez Space France ...
    </scenario>
    <questions>
        <!--Ensemble des questions, entre 1 et 5 -->
        <question id="1">
            <!--Question id 1 -->
            <intitule>Comment vérouiller l'iPad ?</intitule>
            <!--Quelle est la question ? -->
            <reponses>
                <!--Ensemble des réponses à la question : le paramètre estCorrect
                définie si c'est une bonne réponse ou non -->
                <reponse isTrue="1">Bouton vérouiller</reponse>
                <reponse isTrue="0">Bouton home</reponse>
                <reponse isTrue="0">Les deux boutons de volumes</reponse>
            </reponses>
        </question>
        <question id="2">
            <intitule>Et la question 2 ?</intitule>
            <reponses>
                <reponse isTrue="1">Cette réponse est vrai</reponse>
                <reponse isTrue="0">Cette réponse est fausse</reponse>
            </reponses>
        </question>
    </questions>
</quizz>